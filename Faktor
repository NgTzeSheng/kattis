// Since the impact factors are rounded up, if the desired impact factor is 24, 23.00001 is accepted.
// Hence, we take the multiple of A and (I - 1) and plus 1 to their product. 

#include <iostream>

using namespace std;

int main() {
    
    int a, i;
    cin >> a >> i;
    cout << a * (i -1) + 1;
    
    return 0;
}
